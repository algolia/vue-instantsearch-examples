{
  "name": "example-ssr",
  "description": "An illustration of server side rendering with Algolia Vue InstantSearch.",
  "version": "1.0.0",
  "author": "Raymond Rutjes <raymond.rutjes@gmail.com>",
  "private": true,
  "scripts": {
    "build": "yarn run build:server && yarn run build:client",
    "build:client": "cross-env NODE_ENV=production webpack --config build/webpack.client.config.js --progress --hide-modules",
    "build:server": "cross-env NODE_ENV=production webpack --config build/webpack.server.config.js --progress --hide-modules"
  },
  "dependencies": {
    "express": "^4.15.3",
    "vue": "^2.3.3",
    "vue-instantsearch": "^0.7.0",
    "vue-router": "^2.5.3",
    "vue-server-renderer": "^2.3.3"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-env": "^1.5.1",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "file-loader": "^0.9.0",
    "node-sass": "^4.5.0",
    "sass-loader": "^5.0.1",
    "url-loader": "^0.5.8",
    "vue-loader": "^12.1.0",
    "vue-ssr-webpack-plugin": "^3.0.0",
    "vue-template-compiler": "^2.3.3",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-merge": "^4.1.0",
    "webpack-node-externals": "^1.6.0"
  }
}
